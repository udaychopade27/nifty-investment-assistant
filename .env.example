# Database Configuration
DATABASE_URL=postgresql://etf_user:etf_password@localhost:5432/etf_assistant
DB_HOST=localhost
DB_PORT=5432
DB_NAME=etf_assistant
DB_USER=etf_user
DB_PASSWORD=etf_password

# Application Settings
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production
API_HOST=0.0.0.0
API_PORT=8000

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
TELEGRAM_ENABLED=True

# Market Data Provider
# Options: yfinance, nsepy, manual
MARKET_DATA_PROVIDER=yfinance
MARKET_DATA_API_KEY=optional-if-premium-provider

# NSE Market Hours (IST)
MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=15
MARKET_CLOSE_HOUR=15
MARKET_CLOSE_MINUTE=30

# Scheduler Settings
SCHEDULER_ENABLED=True
DAILY_DECISION_TIME=10:00
MONTHLY_SUMMARY_TIME=18:00

# Risk & Safety
PRICE_BUFFER_PERCENT=2.0
MAX_SLIPPAGE_PERCENT=3.0
MIN_INVESTMENT_AMOUNT=100
MAX_SINGLE_INVESTMENT=100000

# Strategy Version
STRATEGY_VERSION=2025-Q1

# Logging
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Redis (Optional - for caching)
REDIS_ENABLED=False
REDIS_URL=redis://localhost:6379/0

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_ENABLED=False

# Timezone
TIMEZONE=Asia/Kolkata

# Testing
TEST_MODE=False
MOCK_MARKET_DATA=False
